# Discord Bot Configuration
DISCORD_TOKEN=your_discord_token
ANNOUNCEMENT_CHANNEL_ID=your_channel_id
WELCOME_CHANNEL_ID=your_welcome_channel_id

# Azure OpenAI Configuration
OPENAI_API_KEY=your_azure_openai_api_key
AZURE_ENDPOINT=https://models.inference.ai.azure.com
MODEL_NAME=gpt-4o

# Bot Memory Configuration
MAX_MEMORY_LENGTH=10

# Welcome Card Configuration
WELCOME_BACKGROUND_URL=https://example.com/your-background-image.jpg

# Set to 'true' to use random backgrounds for welcome cards
USE_RANDOM_BACKGROUNDS=false

# Spotify API Credentials (for music features)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Lavalink Configuration (for music features)
LAVALINK_HOST=127.0.0.1
LAVALINK_PORT=2333
LAVALINK_PASSWORD=youshallnotpass
